{
  "name": "calendar-matcher",
  "private": true,
  "devDependencies": {
    "esbuild": "^0.27.2",
    "tailwindcss": "^3.4.17"
  },
  "scripts": {
    "build:css": "tailwindcss -c tailwind.config.js -i ./app/static/tailwind.input.css -o ./app/static/tailwind.css --minify",
    "watch:css": "tailwindcss -c tailwind.config.js -i ./app/static/tailwind.input.css -o ./app/static/tailwind.css --watch",
    "build:calendar": "node scripts/build-calendar.mjs",
    "build:js": "node scripts/build-main.mjs",
    "build:assets": "npm run build:calendar && npm run build:js",
    "build": "npm run build:assets && npm run build:css"
  },
  "dependencies": {
    "@fullcalendar/core": "^6.1.19",
    "@fullcalendar/daygrid": "^6.1.19",
    "@fullcalendar/interaction": "^6.1.19",
    "@fullcalendar/list": "^6.1.19",
    "@fullcalendar/timegrid": "^6.1.19"
  }
}
